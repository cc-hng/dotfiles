#!/usr/bin/env bash

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1
SUB_COMMAND_NAME=$2

sub_help () {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   dock             Apply macOS Dock settings"
  echo "   help             This help message"
  echo "   update           Update packages and pkg managers (OS, brew, npm, gem)"
}

sub_update () {
  if is-macos; then
    brew update
    brew upgrade
    #npm install npm -g
    #npm update -g
  else
    linux-update
    #sudo -E npm install npm -g
    #sudo -E npm update -g
  fi
  update_nvim
  update_pip
  update_vcpkg
}

sub_dock () {
  . "${DOTFILES_DIR}/macos/dock.sh" && echo "Dock reloaded."
}

sub_updatenvim () {
  update_nvim
  nvim +'call dein#update()' +quit +quit
}

case $COMMAND_NAME in
  "" | "-h" | "--help" | "help")
    sub_help
    ;;
  *)
    shift
    sub_${COMMAND_NAME} $@
    if [ $? = 127 ]; then
      echo "'$COMMAND_NAME' is not a known command or has errors." >&2
      sub_help
      exit 1
    fi
    ;;
esac
