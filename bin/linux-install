#!/bin/bash

set -e
cd "$(dirname "$0")/.."
DOTFILES_ROOT=$(pwd -P)
source "$DOTFILES_ROOT/script/log.sh"

if [[ "$OSTYPE" =~ ^darwin ]]; then
  fail 'os is macosx'
fi

source /etc/os-release
case $ID in
debian|ubuntu|devuan)
  sudo apt install -y $1
  ;;
arch|manjaro)
  yes | paru -S $1
  ;;
*)
  fail "$ID is not supported"
esac
